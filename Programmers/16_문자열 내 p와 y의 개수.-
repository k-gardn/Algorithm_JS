function solution(s){

    ch_s=s.toLowerCase()
    arr=Array.from(ch_s);
    
    let xchar=0
    let ychar=0
    
    for(var i=0; i<arr.length;i++){
      if (arr[i]!="p")continue;{
        xchar +=1
      }
    }
    
    for(var j=0; j<arr.length;j++){
      if (arr[j]!="y")continue;{
        ychar +=1
      }
    }
    
    if(xchar==ychar || (xchar==0 && ychar==0)){
      answer = true;
    }
    else{
      answer = false;
    }
        return answer;
    }